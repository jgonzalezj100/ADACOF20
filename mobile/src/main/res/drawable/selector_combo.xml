<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
  <item android:state_pressed="true" >
    <shape>
         <!---PARA IMPLMENTAR LA SELEECION EN EL GRIVIEW DE ESCOGER AL NINO  -->  
      <!--- color a todo el relleno del boton -->  
      <solid
          android:color="@color/azulcuatroalto" />
      <!--- para el ancho del borde del boton y la segunda es para el color del borde -->
      <stroke
          android:width="1dp"
          android:color="@color/negro" />
      <corners
          android:radius="6dp" />
            <!--- separacion del tecto con los bordes  del boton  -->
      <padding
          
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp" />
    </shape>
  </item>
    <item android:state_selected="true">
    <shape>
        
      <!--- color a todo el relleno del boton -->  
      <solid
          android:color="@color/tomatetresalto" />
      <!--- para el ancho del borde del boton y la segunda es para el color del borde -->
      <stroke
          android:width="1dp"
          android:color="@color/tomatetresalto" />
      <corners
          android:radius="6dp" />
            <!--- separacion del tecto con los bordes  del boton  -->
      <padding
          
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp" />
    </shape>
  </item>
  
  <item>
    <shape>
      <gradient
          android:startColor="@color/celestecuatrobajo"
          android:endColor="@color/celestecuatrobajo"
          android:angle="270" />
      <stroke
          android:width="1dp"
          android:color="@color/celestecuatrobajo" />
      <corners
          android:radius="6dp" />
      <padding
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp" />
    </shape>
  </item>
</selector>    
 