 <android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"    
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linlayVideoAnimacionReproducePanelPrincipal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/verdedos"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linlayVideoAnimacionReproduceEjercicios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="6"
        android:background="@drawable/borderlayoutuno"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/linlayVideoAnimacionReproducePanelPanelTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/borderlayouttitulo"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txtVideoAnimacionReproduceTitulo"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/negro"
                android:textSize="21sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linlayVideoAnimacionReproducePanelvideoImg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

           <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="5" 
              
          >

               <ec.edu.fonts.adacof.vista.reproduccionmultimedia.AnimacionGifView
                   android:id="@+id/videoAnimacionGifview"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                    android:scaleType="center"

			    />

           </LinearLayout>

            <LinearLayout
	            android:id="@+id/linlayVideoAnimacionPanelControles"                
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/btnReproduceVideoAnimacionPlay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
 					android:src="@drawable/selector_btn_play"
               />
                
                <ImageButton
                    android:id="@+id/btnReproduceVideoAnimacionStop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
  					android:src="@drawable/selector_btn_stop"
               />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <ListView android:id="@+id/drawer_list_menuAnimacionReproduce"
        android:layout_width="140dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="@color/cafe"/>

</android.support.v4.widget.DrawerLayout>